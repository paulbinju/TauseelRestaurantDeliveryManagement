@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/jquery-1.8.3.min.js"></script>
<div class="container-fluid">
    <div class="page-content">


        <div class="row" style="min-height:600px;">
            <div class="col-lg-12">
                <h2 class="col-md-12">@ViewBag.shopname - Menu Type</h2>
                <section id="main-content">
                    <section class="wrapper">
                        <!-- page start-->
                        <script>
                            $(document).ready(function () {
                                $(".editrow").hide();
                            });
                            function openrow(row) {
                                $("#edit-" + row).show(2000);

                            }
                        </script>
                        <div class="row">
                            <div class="col-lg-12">
                                <section class="panel">
                                    <header class="panel-heading">

                                        <div id="addform" style="width:100%; ">

                                            @using (Html.BeginForm("Create", "MenuType"))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true)

                                                <div class="col-md-8">

                                                    <input type="text" name="MenuType" class="form-control cke_required" placeholder="Meny Type" />
                                                </div>
                                                    <div class="col-md-4">
                                                        <input type="submit" name="submit" class="btn btn-warning" value="Save" />
                                                    </div>
                                            <input type="hidden" name="ShopID" value="@Convert.ToInt32(Session["CurrentShopID"])" />
                                            }
                                            <br style="clear:both" />
                                        </div>
                                    </header>
                                    <table class="table table-striped table-advance table-hover">
                                        <thead>
                                            <tr>
                                                <th><i class="fa fa-sort"></i> Menu Type</th>
                                                <th>Modify</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.MenuType
                                                    </td>


                                                    <td>

                                                        <button onclick="openrow(@item.MenuTypeID)" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>

                                                    </td>
                                                </tr>
                                                using (Html.BeginForm("Edit", "MenuType"))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    @Html.ValidationSummary(true)
                                                    <tr id="edit-@item.MenuTypeID" class="editrow">
                                                        <td>
                                                            <input class="form-control cke_required" type="text" name="MenuType" value="@item.MenuType" />
                                                            <input type="hidden" name="MenuTypeID" value="@item.MenuTypeID" />
                                                        </td>
                                                        <td>

                                                            <button class="btn btn-danger btn-xs"><i class="fa fa-pencil"></i> Update</button>

                                                        </td>
                                                    </tr>
                                                }

                                            }
                                        </tbody>
                                    </table>
                                </section>
                            </div>
                        </div>
                        <!-- page end-->
                    </section>
                </section>
            </div>
        </div>



    </div>
</div>
