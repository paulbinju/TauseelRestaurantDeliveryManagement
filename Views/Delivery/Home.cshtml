@{
    Layout = "~/Views/Shared/_LayoutDelivery.cshtml";
}



<script src="~/js/jquery-1.8.3.min.js"></script>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-md-12">
                <div class="col-lg-12" style="background-color:white;min-height:1000px">


                    <div class="col-md-2 fa-border" style="min-height:100px;text-align:center">
                        <div class="col-lg-push-6">
                            @foreach (var shop in ViewBag.Shops)
                            {
                                <img style="width:150px;" src="@Url.Content("~/ShopLogos/")@shop.ShopID-@shop.Logo" />
                            }

                        </div>

                  
                    </div>

 


                    <div class="col-md-8">
                
                      

                        <div class="col-md-12">
                            @foreach (var shop in ViewBag.Shops)
                            {
                                <div class="col-md-12">
                                     <h1>@shop.ShopName</h1>
                                    
                                </div>
                                <div class="col-md-4">
                                    <b>Has Offers</b>: 
                                    @(shop.HasOffers ? "Yes" : "No")
                                </div>

                                <div class="col-md-4">
                                    <b>Minimum Order</b>: 
                                    @shop.MinOrder
                                </div>
                                <div class="col-md-4">
                                    <b>Active</b>: 
                                    @(shop.Active ? "Active" : "Not Active")
                                </div>
                                <div class="col-md-4">
                                    <b>Email ID</b>:
                                    @shop.Userid

                                </div>
                                <div class="col-md-4">
                                    <b>Password</b>: @shop.Password
                                </div>
                                <div class="col-md-4">
                                    <b>Delivery Charge</b>:BD @shop.DeliveryCharge
                                </div>

                                <div class="col-md-4">
                                    <b>Current Status</b>: @{
                                string currentstatus = "";
                                if (shop.CurrentStatus == 0)
                                {
                                    currentstatus = "Open";

                                }
                                else if (shop.CurrentStatus == 1)
                                {
                                    currentstatus = "Busy";
                                }
                                else if (shop.CurrentStatus == 2)
                                {
                                    currentstatus = "Close";
                                }

                                    }
                                    @currentstatus
                                </div>
                            }
                        </div>
                        <br class="clear:both" />
                        <br class="clear:both" />
                        <br class="clear:both" />
                       

                    </div>

                    <div class="col-md-2" id="addform" style="padding:25px; background-color:#efefef ">

                        @foreach (var shop in ViewBag.Shops)
                        {
                            using (Html.BeginForm("MainItems", "Delivery"))
                            {

                                <div class="col-md-12">

                                    <b>Current Status</b>
                                    <select class="form-control" name="CurrentStatus">
                                        <option @(shop.CurrentStatus == 0 ? "selected" : "") value="0">Open</option>
                                        <option @(shop.CurrentStatus == 1 ? "selected" : "") value="1">Busy</option>
                                        <option @(shop.CurrentStatus == 2 ? "selected" : "") value="2">Closed</option>

                                    </select>

                                </div>



                                <div class="col-md-12">
                                    <br />
                                    <input type="hidden" value="@shop.ShopID" name="ShopID" />
                                    <input type="submit" class="btn btn-danger" value="Save" />
                                    
                                </div>

                            }

                        }
                    </div>





                    <br style="clear:both" />
                    <br style="clear:both" /> 
                    <br style="clear:both" />


                    <div class="col-md-12  table-bordered">
                        <h3>Locations</h3>

                        <div class="col-md-12">
                            @foreach (var loc in ViewBag.Showlocations)
                            {
                                <div class="col-md-3">@loc.LocationName</div>

                            }
                           
                        </div>
                        <br style="clear:both" />
                        <br style="clear:both" />


                    </div>

                    <br style="clear:both" />
                    <br style="clear:both" />
                    <br style="clear:both" />

                    <div class="col-md-3 ">
                      
              <div class="col-md-12 table-bordered">
                  <h3>Timings</h3>
                 
                  @foreach (var tim in ViewBag.Timings)
                  {

                      <div class="col-md-4">@tim.Day -</div><div class="col-md-4">@tim.StartTime  -</div><div class="col-md-4"> @tim.EndTime</div>
                  }
                  <br style="clear:both" />
                  <br style="clear:both" />

              </div>

                    </div>

                    <div class="col-md-9 ">
                        <div class="col-md-12 table-bordered">
                            <h3>Cuisine</h3>
                           

                            <div class="col-md-12">

                                @foreach (var cus in ViewBag.Showcuisines)
                                {
                                    <div class="col-md-3">@cus.CuisineName</div>

                                }
                            </div>

                            <br />
                            <br style="clear:both" />
                            <br />
                            <br />

                        </div>
                            <br />
                            <br style="clear:both" />
                            <br />
                            <br />

                        </div>
         


                </div>

               
           
 

            </div>
        </div>
    </div>
</div>