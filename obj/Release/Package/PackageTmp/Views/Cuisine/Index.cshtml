@model IEnumerable<TauseelRestaurant.Models.Cuisine_T>

<script src="~/js/jquery-1.8.3.min.js"></script>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading clearfix">
                        <script>
                            $(document).ready(function () {
                                $(".editrow").hide();
                            });
                            function openrow(row) {
                                $("#edit-" + row).show(2000);
                            }
                        </script>

                        <div id="addform" style="width:100%;">

                            @using (Html.BeginForm("Create", "Cuisine"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                 

                                <div class="col-md-8">

                                    <input type="text" name="Cuisine" class="form-control cke_required" placeholder="Cuisine" />
                                </div>
                                <div class="col-md-4">
                                    <input type="submit" name="submit" class="btn btn-success" value="Save" />
                                </div>

                            }
                        </div>
                        </header>
                        
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-sort"></i> Cuisine</th>
                                    <th>Modify</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Cuisine
                                        </td>


                                        <td>

                                            <button onclick="openrow(@item.CuisineID)" class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</button>

                                        </td>
                                    </tr>
                                    using (Html.BeginForm("Edit", "Cuisine"))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)
                                        <tr id="edit-@item.CuisineID" class="editrow">
                                            <td>
                                                <input class="form-control cke_required" type="text" name="Cuisine" value="@item.Cuisine" />
                                                <input type="hidden" name="CuisineID" value="@item.CuisineID" />
                                            </td>
                                            <td>
                                                <button class="btn btn-danger "><i class="fa fa-check"></i> Update</button>
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
</section>
            </div>
        </div>

    </div>
</div>
