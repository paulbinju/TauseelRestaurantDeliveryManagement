@model IEnumerable<TauseelRestaurant.Models.ResCustomer_T>
<div class="container-fluid">
    <div class="page-content">
        <div class="row" style="min-height:850px;">
            <div class="col-lg-12">
                <section class="panel">
                   
                    <header class="panel-heading clearfix">
                
                        @using (Html.BeginForm("Search", "Customer"))
            {

                            <div class="col-lg-12   ">
                                <div class="col-lg-4  ">
                                    <input name="keyword" type="text" class="form-control" placeholder="Keywords" />
                                </div>
                                <div class="col-lg-4  ">
                                        <select name="colname" class="form-control">
                                        <option>Name</option>
                                        <option>Email</option>
                                        <option>Mobile</option>
                                    </select>
                                </div>
                                <div class="col-lg-4  ">
                                      <input type="submit" class="btn btn-danger" value="Search" />
                                </div>
                            </div>

                        }
                    </header>

                    <br />
                    <table class="table table-striped table-advance table-hover" style="font-size:11px;">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mobile)
                                </th>
                                <th>
                                    CPR / PNN
                                </th>
                                <th>
                                    Flat / Villa
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Building)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Road)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Block)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Location)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FlatVilla)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Building)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Road)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Block)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>



                </section>
            </div>

        </div>
    </div>
</div>